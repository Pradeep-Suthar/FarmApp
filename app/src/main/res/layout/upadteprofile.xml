<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorWhite"/>


    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorGreenDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="15dp"
            android:backgroundTint="@color/colorGreenDark"
            android:textColorHint="@color/colorGreenDark"
            android:id="@+id/UeditTextname"
            android:layout_margin="5dp"
            android:textColor="@color/colorGreenDark"
            android:inputType="textPersonName"
            android:hint="Enter Full Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorGreenDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="15dp"
            android:backgroundTint="@color/colorGreenDark"
            android:textColorHint="@color/colorGreenDark"
            android:id="@+id/UeditTextmobile"
            android:layout_margin="5dp"
            android:maxLength="10"
            android:textColor="@color/colorGreenDark"
            android:inputType="number"
            android:hint="Enter Mobile No."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorGreenDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="15dp"
            android:backgroundTint="@color/colorGreenDark"
            android:textColorHint="@color/colorGreenDark"
            android:id="@+id/UeditTextPin"
            android:layout_margin="5dp"
            android:maxLength="6"
            android:textColor="@color/colorGreenDark"
            android:inputType="number"
            android:hint="Enter Pin Code."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_marginTop="20dp"
        android:background="@color/colorGreenDark"
        android:id="@+id/UPButton"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:text="Update Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>