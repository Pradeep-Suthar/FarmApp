<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg11"
    tools:context=".Activity.LoginActivity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/colorGreenDark"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textSize="40dp"
            android:gravity="center"
            android:text="Sign Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:elevation="5dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher_round"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite"/>


        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorGreenDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="15dp"
                android:backgroundTint="@color/colorGreenDark"
                android:textColorHint="@color/colorGreenDark"
                android:id="@+id/regName"
                android:layout_margin="5dp"
                android:textColor="@color/colorGreenDark"
                android:inputType="textEmailAddress"
                android:hint="Enter Full Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorGreenDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="15dp"
                android:backgroundTint="@color/colorGreenDark"
                android:textColorHint="@color/colorGreenDark"
                android:id="@+id/regEmail"
                android:layout_margin="5dp"
                android:textColor="@color/colorGreenDark"
                android:inputType="textEmailAddress"
                android:hint="Enter Email"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/regMobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/colorWhite"
                android:hint="Enter Mobile no."
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textSize="15dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="15dp"
                android:backgroundTint="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:id="@+id/regCityPin"
                android:layout_margin="5dp"
                android:textColor="@color/colorWhite"
                android:inputType="number"
                android:maxLength="6"
                android:hint="Enter City Pin Code"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="15dp"
                android:backgroundTint="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:id="@+id/regPwd"
                android:layout_margin="5dp"
                android:textColor="@color/colorWhite"
                android:inputType="textPassword"
                android:hint="Enter Password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/colorWhite"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/regCPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textSize="15dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorwhiteTran"
            android:textAllCaps="false"
            android:id="@+id/buttonsignup"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:text="Sign Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textClickReg"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:text="Already have an Account ? Login Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>