<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgBank"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:src="@drawable/loan"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:textColor="@color/colorGreenDark"
        android:layout_margin="10dp"
        android:id="@+id/textViewSendReqest"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/imgBank"
        android:text="Request is send to "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_margin="10dp"
        android:id="@+id/textViewBankReqestName"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textViewSendReqest"
        android:text="State Bank of India"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

   \
</RelativeLayout>